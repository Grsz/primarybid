{
  "compilerOptions": {
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "types": ["jest", "node", "express"],
    "rootDir": "./",
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
